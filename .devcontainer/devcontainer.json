{
    "name": "Architecture Patterns with Python",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "inputs": [
                {
                    "id": "pickPythonInterpreter",
                    "type": "command",
                    "command": "shellCommand.execute",
                    "args": ["cat ${containerWorkspaceFolder}/.devcontainer/venv_path.txt"]
                }
            ],
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "python.testing.unittestEnabled": false,
                "python.testing.pytestEnabled": true,
                "python.pythonPath": "${containerWorkspaceFolder}/.devcontainer/${input:pickPythonInterpreter}"
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "me-dutour-mathieu.vscode-github-actions",
                "VisualStudioExptTeam.vscodeintellicode",
                "littlefoxteam.vscode-python-test-adapter",
                "coenraads.bracket-pair-colorizer-2",
                "esbenp.prettier-vscode",
                "bungcip.better-toml"
            ]
        }
    },
    "postCreateCommand": "poetry install && . ${containerWorkspaceFolder}/.devcontainer/get_poetry_venv_path.sh > ${containerWorkspaceFolder}/.devcontainer/venv_path.txt"
}